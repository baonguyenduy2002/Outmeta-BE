<div class="row">
    <form action="/post/store" method="POST">
        <div class="mb-3">
            <label for="post_id" class="form-label">Id (Don't input if you want auto id setting, when you input id, group post and topic post will be unavailable)</label>
            <input type="text" name="post_id" class="form-control" id="post_id" aria-describedby="post_id">
        </div>

        <div class="mb-3">
            <label for="post_content" class="form-label">Content</label>
            <input type="text" name="post_content" class="form-control" id="post_content" aria-describedby="name">
        </div>

        <div class="mb-3">
            <label for="post_media" class="form-label">Media</label>
            <input type="text" name="post_media" class="form-control" id="post_media" aria-describedby="password">
        </div>

        <div class="mb-3">
            <label for="post_datetime" class="form-label">Date</label>
            <input type="date" name="post_datetime" class="form-control" id="post_datetime" aria-describedby="dob">
        </div>

        <div class="mb-3">
            <label for="post_datetime" class="form-label">Topic ID (if there is)</label>
            <input type="text" name="topic_id" class="form-control" id="topic_id" aria-describedby="dob">
        </div>

        <div class="mb-3">
            <label for="post_datetime" class="form-label">Group ID (if there is)</label>
            <input type="text" name="group_id" class="form-control" id="group_id" aria-describedby="dob">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>