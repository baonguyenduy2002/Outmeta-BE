<div class="row">
    <form action="/group/store" method="POST">
        <div class="mb-3">
            <label for="group_id" class="form-label">Id (Don't input if you want auto id setting)</label>
            <input type="text" name="group_id" class="form-control" id="group_id" aria-describedby="group_id">
        </div>

        <div class="mb-3">
            <label for="group_name" class="form-label">Group name</label>
            <input type="text" name="group_name" class="form-control" id="group_name" aria-describedby="name">
        </div>

        <div class="mb-3">
            <label for="group_description" class="form-label">Description</label>
            <input type="text" name="group_description" class="form-control" id="group_description" aria-describedby="password">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>